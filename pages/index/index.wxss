/**index.wxss**/
page {
  background: #f5f5f5;
}

.earningsWrapper {
  position: relative;
  background: #fcb816;
  color: #fff;
  padding: 30rpx;
}

.title {
  font-size: 24rpx;
}

.earnings {
  padding: 30rpx 0 60rpx;
  font-size: 60rpx;
  line-height: 1;
}

.unit {
  padding-left: 10rpx;
  font-size: 24rpx;
}

.taxWrapper {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(0,0,0,.05);
  line-height: 20rpx;
  font-size: 20rpx;
}

.tax {
  flex: 1;
  padding: 20rpx 30rpx;
}

.tax:nth-child(-n+2) {
  border-right: 2rpx solid #fcb816;
}

.formWrapper {
  margin-top: 20rpx;
  padding-left: 30rpx;
  background: #fff;
  font-size: 28rpx;
  color: #999;
}

.formItem {
  display: flex;
  align-items: center;
  justify-content:space-between;
  padding: 20rpx 30rpx 20rpx 0;
}

.formItem:not(:last-child) {
  border-bottom: 2rpx solid #eee;
}

.formChange {
  flex: 0 70%;
}

input {
  caret-color: #fcb816;
  color: #333;
}

.input-placeholder {
  color: #999;
}

.taxDetail {
  margin: 20rpx 0;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 0 2rpx #ccc;

}

.taxItem {
  display: flex;
  align-items: center;
  justify-content:space-between;
  font-size: 28rpx;
  border-bottom: 2rpx solid #dcdcdc;
  line-height: 60rpx;
  color: #666;
}

.taxItem text {
}

.taxItem text:first-child {
  width: 20%;
  white-space: nowrap;
}

.taxItem text:nth-child(n+2) {
  width: 33%;
  text-align: right;
}